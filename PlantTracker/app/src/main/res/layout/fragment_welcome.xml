    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6F5"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".screens.welcome.WelcomeFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cactus2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="We are glad you pricked us!"
        android:textAlignment="center"
        android:textColor="#128675"
        android:textSize="18sp" />

</LinearLayout>