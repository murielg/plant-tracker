<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/instructions_bg"
        tools:context=".screens.instructions.InstructionsFragment">

        <TextView
            android:id="@+id/textview_instructions_step1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Tap the + button on the next screen to add a new plant"
            android:textAlignment="center"
            android:textColor="@color/timber_green"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textview_instructions_step2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Enter your plant's name, care and watering details"
            android:textAlignment="center"
            android:textColor="@color/timber_green"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_instructions_step1" />

        <TextView
            android:id="@+id/textview_instructions_step3"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Keep track of all your plants in the My Plants list"
            android:textAlignment="center"
            android:textColor="@color/timber_green"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_instructions_step2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_instructions_continue"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/persimmon"
            android:fontFamily="@font/nunito_bold"
            android:text="I got it"
            android:textAlignment="center"
            android:textAllCaps="true"
            app:cornerRadius="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_instructions_step3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>